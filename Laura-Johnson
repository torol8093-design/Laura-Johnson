  <script>
  // Populate massage-type select from service cards and handle form storage/display
  document.addEventListener('DOMContentLoaded', function () {
    // build options from service headings to keep them in sync
    const headings = Array.from(document.querySelectorAll('.massage-card h3')).map(h => h.textContent.trim());
    const select = document.getElementById('massage-type');
    if (select) {
      // ensure default option present
      select.innerHTML = '<option value="">Select Massage Type</option>';
      headings.forEach(type => {
        const opt = document.createElement('option');
        opt.value = type.toLowerCase().replace(/\s+/g, '-');
        opt.textContent = type;
        select.appendChild(opt);
      });
    }

    const form = document.querySelector('#book-session form');
    const bookingsDiv = document.getElementById('bookings');

    function escapeHtml(s) { return (s||'').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }

    function renderBookings() {
      const list = JSON.parse(localStorage.getItem('bookings') || '[]');
      if (!bookingsDiv) return;
      if (list.length === 0) {
        bookingsDiv.innerHTML = '<p style="color:#fff; opacity:0.9;">No bookings yet.</p>';
        return;
      }
      bookingsDiv.innerHTML = '';
      // newest first
      list.slice().reverse().forEach(b => {
        const el = document.createElement('div');
        el.className = 'booking';
        el.innerHTML = '<strong>' + escapeHtml(b.name) + '</strong> — ' + escapeHtml(b.type) + '<br/>' + escapeHtml(b.email) + ' | ' + escapeHtml(b.phone) + '<div class="notes">' + escapeHtml(b.notes) + '</div>';
        bookingsDiv.appendChild(el);
      });
    }

    // Show inline success notice (auto-dismiss)
    const noticeEl = document.getElementById('booking-notice');
    function showNotice(message, timeout = 4000) {
      if (!noticeEl) return;
      noticeEl.textContent = '✅ ' + message;
      noticeEl.classList.add('visible');
      // Ensure screen readers announce change
      noticeEl.setAttribute('aria-hidden', 'false');
      clearTimeout(showNotice._t);
      showNotice._t = setTimeout(() => {
        noticeEl.classList.remove('visible');
        noticeEl.setAttribute('aria-hidden', 'true');
      }, timeout);
    }

    if (form) {
      form.addEventListener('submit', function (e) {
        e.preventDefault();
        const name = document.getElementById('name').value.trim();
        const email = document.getElementById('email').value.trim();
        const phone = document.getElementById('phone').value.trim();
        const notes = document.getElementById('notes').value.trim();
        const sel = document.getElementById('massage-type');
        const type = sel && sel.selectedIndex > 0 ? sel.options[sel.selectedIndex].text : '';

        const entry = { name, email, phone, type, notes, created: new Date().toISOString() };
        const stored = JSON.parse(localStorage.getItem('bookings') || '[]');
        stored.push(entry);
        localStorage.setItem('bookings', JSON.stringify(stored));
        renderBookings();
        form.reset();
        // show inline UX hint
        try { showNotice('Booking saved — laura would reach you shortly'); } catch (err) { /* noop */ }
      });
    }

    renderBookings();
  });
  </script>

